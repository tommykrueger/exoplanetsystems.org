.dialog
	width 560px
	height 400px
	margin -200px 0 0 -280px
	position absolute
	top 50%
	left 50%
	overflow hidden
	background rgba(255, 255, 255, 0.9)
	box-shadow 0 0 8px rgba(100, 100, 100, 0.25)
	border 2px solid rgba(150, 150, 150, 0.25)
	border-radius 6px
	z-index 99

.dialog-header
	padding 24px
	display block
	background: linear-gradient(top, #f9f9f9, #f0f0f0);
	border-bottom 1px solid #f0f0f0
	.close-dialog-btn
		width 24px
		height 24px
		display block
		position absolute
		top 12px
		right 12px
		font-size 1.6em
		line-height 24px
		text-align center
		cursor pointer
		background #f9f9f9
		border 1px solid #f0f0f0
		border-radius 4px 
	.close-dialog-btn:hover
		background #e0e0e0

.dialog-content
	padding 24px
	display block
	border-top 1px solid #e9e9e9
	h2
		margin 12px 0
		color #444
		font-size 2em
	p
		color #666
		font-size 1.2em
		line-height 26px


.dialog-footer
	width 100%
	padding 24px
	display block
	text-align center
	position absolute
	bottom 0

	.form-btn
		width auto
		min-width 100px
		display inline-block
		padding 6px 12px
		color #fff
		text-align center
		text-decoration none
		cursor pointer
		border-radius 3px
		border 1px solid rgba(0, 0, 0, 0.25)
		box-shadow 0px 1px 3px rgba(0, 0, 0, 0.25)
		z-index 999
	.form-btn.submit-btn:hover
		border 1px solid rgba(0, 0, 0, 0.50)
	.form-btn.submit-btn
		background: linear-gradient(top, rgba(122,188,255,1), rgba(64,150,238,1));
